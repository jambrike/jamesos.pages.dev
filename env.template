# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# OpenAI API Key (required for chat functionality)
OPENAI_API_KEY=your_openai_api_key_here

# Upstash Redis (required for chat caching)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# AstraDB Vector Store (required for chat context retrieval)
ASTRA_DB_ENDPOINT=your_astra_db_endpoint_here
ASTRA_DB_APPLICATION_TOKEN=your_astra_db_token_here
ASTRA_DB_COLLECTION=your_collection_name_here

# Optional: Resend API Key (for contact form email functionality)
RESEND_API_KEY=your_resend_api_key_here

# Site Configuration
NEXT_PUBLIC_DOMAIN=jamesos.pages.dev
